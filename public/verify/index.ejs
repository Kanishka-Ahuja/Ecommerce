<html>
  <head>
    <link rel="stylesheet" href="/signup/indexstyle.css" type="text/css">
  </head>
  <body background="background2.jpg">   
    <div class = "nav">
      <h1 id ="sitename">MusicalEra</h1>
  </div>  
  <div class="content">
    <form method="POST" action="/verifyemail">
      <div class="head">
      <h1 class="heading">Verify Account</h1>
      </div>
      <div class="txt">
      <input class="input" type="email" placeholder="Email Id" id = "Email" name= "Email" required>
      </div>
      <div class="txt">
      <input class="input" type="password" placeholder="Password" id = "Password" name= "Password" minlength="8" required>
      </div>
      <div class="txt">
        <input class="input" type="text" placeholder="OTP" id = "OTP" name= "OTP">
        </div>
      <div class="btn">
      <input type="submit" id="button" value="Submit">
      </div>
      or
      <h4 class="pswd"><a href="/signup">Create new account</a></h4>
      <h4><%= Error %></h4>
    </form>
    </div>
  </body>
</html>