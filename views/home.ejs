<html>
  <head>

    <title>The Musical Era</title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/components/loginheader.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/components/productView.css" type="text/css">
    <link rel="stylesheet" href="/stylesheets/components/details.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="/scripts/home.js" type="text/javascript"></script>
  
  </head>
    <body>

      <%- include('components/loginheader.ejs',{name : name}) %>

      <dialog id="dialogbox" ></dialog>

      <div class="grid" id ="grid">

        <% for(i=0;i<data.length;i++){ %>

        <div class="productDiv" id="<%= data[i].Url %>">

          <img class="productImage" src="../<%= data[i].Url %>"  onclick="getdetails('<%= data[i].Url %>',1)">
          <p class="productTitle" onclick="getdetails('<%= data[i].Url %>',1)"><%= data[i].Title %></p>
          
          <div class="priceAndCart">

            <i id="fav<%= data[i].Url %>" class="favicon fa-regular fa-heart fa-xl" style="color: #3b363594;"></i>
            <p class="productPrice"><%= data[i].Price %></p>
            <i id="cart<%= data[i].Url %>"class="carticon fa-solid fa-cart-plus fa-xl" style="color: #3b363594;"></i>
          

          </div>
          
        </div>

        <% } %> 

      </div>
      
      <%- include('components/footer.ejs',{name : name}) %>
    </body>
</html>